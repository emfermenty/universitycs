@model List<Post>

<h1>Новости</h1>
<a href="/News/Create">Добавить новость</a>
<ul>
    @if (Model != null && Model.Any())
    {
        foreach (var news in Model)
        {
            <li>
                <h2 style="display: inline;">@news.Id - @news.Name</h2>
                <p>@news.Description</p>
                <a href="@Url.Action("Delete", "News", new { id = news.Id })" onclick="return confirm('Вы уверены, что хотите удалить эту новость?');">Удалить</a>
            </li>
        }
    }
    else
    {
        <li>Нет новостей для отображения.</li>
    }
</ul>