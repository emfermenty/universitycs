@model List<Category>

@{
    ViewData["Title"] = "Категории";
}

<h2>Категории</h2>

<ul>
    @foreach (var category in Model)
    {
        <li>
            @category.Category_Name
            <a asp-action="Posts" asp-controller="Category" asp-route-categoryId="@category.Id">Просмотреть посты</a>
        </li>
    }
</ul>

<div>
    <a asp-action="Create">Создать новую категорию</a>
</div>